<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="8dp"
    android:paddingBottom="80dp">
    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/detail_item_profile_image"
            android:src="@mipmap/ic_launcher"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_margin="7.5dp"/>
        <TextView
            android:id="@+id/detail_item_profile_name"
            android:text="User Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/detail_item_iv_content"
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        android:layout_height="250dp"/>
    <LinearLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:paddingLeft="16dp"
        android:layout_height="50dp">
        <ImageView
            android:id="@+id/detail_item_favorite"
            android:src="@drawable/ic_favorite_border"
            android:tint="@android:color/tertiary_text_light"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginRight="8dp"/>
        <ImageView
            android:id="@+id/detail_item_comment"
            android:src="@drawable/ic_chat_black"
            android:tint="@android:color/tertiary_text_light"
            android:layout_width="24dp"
            android:layout_height="24dp"/>
    </LinearLayout>
    <TextView
        android:id="@+id/detail_item_favorite_count"
        android:text="Like 0"
        android:paddingHorizontal="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/detail_item_explain"
        android:text="Explain content"
        android:paddingHorizontal="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>